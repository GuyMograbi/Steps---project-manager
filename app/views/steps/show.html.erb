
<div id="showStep">
	<%= image_tag('icons/clock_' + @step.status + '.png' , :title=>@step.status ,:alt=>@step.status, :id=> 'statusImage') %>
	<%= image_tag('icons/' + @step.resolved_access + '.png', :title=>@step.resolved_access, :alt=>@step.resolved_access, :id=>'accessImage')%>
	<%= image_tag('icons/important.png', :title=>'important', :alt=>'important', :id=>'importantImage') if @step.important%>
	<h1>
	<%= link_to(image_tag('/images/icons/left_big.png'),demote_step_path(@step)) if can_demote?(@step)%><%=h @step.title %><%= link_to(image_tag("/images/icons/right_big.png"),promote_step_path(@step)) if can_promote?(@step)%>
	</h1>
<div id="controls">
  
</div>
<%=link_to (h @step.parent.title), step_path(@step.parent) unless @step.parent.nil?%>
<%= link_to image_tag('icons/edit.png', :title=>'Edit'), edit_step_path(@step) %> 
<%= link_to image_tag('icons/add.png', :title=>'New'), new_step_path(:parent=>@step)%>
    <% form_for @step, :html => { :method => "delete", :style =>  'display: inline' }  do |f| %>
        <%= f.submit 'delete', :type => :image, :src => '/images/icons/bin.png' %>
    <% end %>

<div id="description" class="<%=  'high-description' if @step.children.empty?%>">	
  <%= textilize_without_paragraph @step.description %>
</div>
<div id="requires_update">	
<% if @step.children.any? { |c| c.pending?} %>
Requires update : 
	<% @step.children.each do |c|%>
		<%= step_link c if c.pending?%>
	<% end %>
<% end %>
</div>
<%=render(:partial => "manager/projects_status_bar") unless @step.children.empty?%>




</div>

